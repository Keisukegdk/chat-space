.message-content{ "message-id": "#{message.id}"}
  %p.message__name
    = message.user.name
  %p.message__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.message__text
    = message.body
  %p.image_present
    - if message.image.present?
      = image_tag message.image , class: 'message-image'



